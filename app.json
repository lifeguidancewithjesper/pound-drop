{
  "expo": {
    "name": "Pound Drop",
    "owner": "lifeguidancewithjesper",
    "slug": "pound-drop-weight-loss-tracker",
    "version": "1.0.0",
    "sdkVersion": "54.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo-pound-drop.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "Your personal weight loss tracking companion with meal logging, habit tracking, and progress insights.",
    "assetBundlePatterns": [
      "**/*"
    ],
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.lifeguidancewithjesper.pounddrop",
      "buildNumber": "24",
      "icon": "./assets/logo-pound-drop.png",
      "infoPlist": {
        "NSCameraUsageDescription": "Take photos of your meals for tracking",
        "NSPhotoLibraryUsageDescription": "Select photos from your library for meal logging",
        "NSUserNotificationUsageDescription": "Send reminders for meal logging and habit tracking",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.lifeguidancewithjesper.pounddrop",
      "versionCode": 2,
      "icon": "./assets/logo-pound-drop.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "NOTIFICATIONS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "3fd7b70e-3422-4ac6-8fcc-eccd532f6c9d"
      }
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "15.1"
          },
          "android": {
            "kotlinVersion": "2.1.20"
          }
        }
      ],
      [
        "react-native-iap",
        {
          "enablePendingPurchases": true
        }
      ]
    ]
  }
}
